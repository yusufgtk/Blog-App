@model List<NewModel>

@{
    ViewData["Title"] = "Haberler";
}

<div class="container my-5">
    <div>
        <div class="my-5">
            <h1 class="text-center"><span>Özet Haberler</span></h1>
        </div>
    </div>
    <div class="my-5">
        <form class="d-flex" role="search" asp-controller="News" asp-action="NewsList" method="post">
            <input class="form-control me-2 border borde-3 border-dark" name="search" type="search" placeholder="Blog ara..." aria-label="Search">
            <button class="btn btn-lg btn-outline-dark" type="submit"><i class="fa-brands fa-searchengin fa-lg me-2 d-inline"></i><span>Ara</span></button>
        </form>
    </div>
    @if(Model.Count()==0)
    {
        <div class="alert alert-danger text-center" role="alert">
            Haber Bulunamadı!
        </div>
    }else{
        <div class="my-5">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 d-flex align-items-stretch">
                    <div class="row">
                        @foreach(var news in Model)
                        {
                            <div class="col-sm-12 col-md-6 col-lg-6 mb-5">
                                <partial name="_NewsCard" model="@news"></partial>
                            </div>
                        }
                    </div>
                </div>
                @* <div class="col-sm-12 col-md-12 col-lg-3" >
                    <ul class="list-group">
                        @foreach(var category in ViewBag.Categories)
                        {
                            <li class="list-group-item bg-dark">
                                <a asp-controller="Blog" asp-action="BlogList" asp-route-categoryId="@category.Id" class="text-decoration-none text-white">@category.Name</a>
                            </li>
                        }
                    </ul>
                </div> *@
            </div>
        </div>
    }
</div>